# for convenience, define variable $(OBJS) to list of object files
OBJS= ui.o userinput.o tokenizer.o history.o

# compiler flags.  -g for debug, -O3 for optimization
CFLAGS=-g -O3

# first target is built by default
all: tokenshell

# $@=target, $^=prerequisites
tokenshell: $(OBJS)
	cc -o tokenshell $(CFLAGS) $(OBJS)

#objext files built from c files that include include files
$(OBJS): user.h tokenizer.h history.h

# deletes files generated by compilation
clean:
	rm -f *.o tokenshell

# runs the compiled file with command make run
run:tokenshell
	./tokenshell
